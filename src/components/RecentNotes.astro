---
import LinkCard from '@components/ui/LinkCard.astro'
import Section from '@components/ui/Section.astro'
import { getNotes } from '@libs/note'

const recentNotes = await getNotes(5)
---

<Section title="Recent Notes">
  <ul>
    {
      recentNotes.map((note) => (
        <li>
          <article>
            <LinkCard
              href={note.href}
              text={`${note.data.title} ãƒ» ${note.readingTime}`}
              title={`Read ${note.data.title} (will take ${note.readingTime})`}
            />
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
  }
</style>
